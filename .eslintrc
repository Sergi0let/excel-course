{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": "off",
    "object-curly-spacing": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "indent": "off",

    "linebreak-style": ["error", "unix"] // changes the file to LF
  },
  "extends": ["eslint:recommended", "google"]
}
